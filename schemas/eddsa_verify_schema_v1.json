{
  "type": "object",
  "definitions": {
    "EddsaTestGroup": {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "EddsaVerify"
          ]
        },
        "source": {
          "$ref": "common.json#/definitions/Source"
        },
        "publicKey": {
          "$ref": "#/definitions/PublicKey"
        },
        "publicKeyDer": {
          "type": "string",
          "format": "Asn",
          "description": "Asn encoded public key"
        },
        "publicKeyPem": {
          "type": "string",
          "format": "Pem",
          "description": "PEM encoded public key"
        },
        "publicKeyJwk": {
          "$ref": "json_web_crypto_common.json#/definitions/JsonWebKey",
          "description": "the public key in webcrypto format"
        },
        "tests": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/SignatureTestVector"
          }
        }
      },
      "required": ["source"],
      "additionalProperties": false
    },
    "PublicKey": {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "ECDSAPublicKey",
            "EDDSAPublicKey"
          ]
        },
        "curve": {
          "type": "string",
          "format": "EcCurve",
          "description": "the name of the curve"
        },
        "keySize": {
          "type": "integer",
          "description": "the size of the key in bits"
        },
        "pk": {
          "type": "string",
          "format": "Hex",
          "description": "the public key"
        }
      },
      "additionalProperties": false
    },
    "SignatureTestVector": {
      "type": "object",
      "properties": {
        "tcId": {
          "type": "integer",
          "description": "Identifier of the test case"
        },
        "comment": {
          "type": "string",
          "description": "A brief description of the test case"
        },
        "msg": {
          "type": "string",
          "format": "HexBytes",
          "description": "The message to sign"
        },
        "sig": {
          "type": "string",
          "format": "HexBytes",
          "description": "A signature for msg"
        },
        "result": {
          "type": "string",
          "description": "Test result",
          "enum": [
            "valid",
            "invalid",
            "acceptable"
          ]
        },
        "flags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "A list of flags"
        }
      }
    },
    "additionalProperties": false
  },
  "properties": {
    "algorithm": {
      "type": "string",
      "description": "the primitive tested in the test file"
    },
    "generatorVersion": {
      "type": "string",
      "description": "DEPRECATED: prefer \"source\" property in test group",
      "deprecated": true
    },
    "header": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "additional documentation"
    },
    "notes": {
      "$ref": "common.json#/definitions/Notes"
    },
    "numberOfTests": {
      "type": "integer",
      "description": "the number of test vectors in this test"
    },
    "schema": {
      "enum": [
        "eddsa_verify_schema_v1.json"
      ]
    },
    "testGroups": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/EddsaTestGroup"
      }
    }
  },
  "additionalProperties": false
}
