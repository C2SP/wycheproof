{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "Source": {
      "type": "object",
      "required": ["name", "version"],
      "properties": {
        "name": {
          "type": "string",
          "minLength": 1
        },
        "version": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "Notes": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/NoteEntry"
      }
    },
    "NoteEntry": {
      "type": "object",
      "properties": {
        "description": {
          "type": "string",
          "description": "A description of the flag"
        },
        "bugType": {
          "type": "string",
          "description": "The type of the bug tested for"
        },
        "effect": {
          "type": "string",
          "description": "The expected effect of failing the test vector"
        },
        "links": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "A list of potentially related references"
        },
        "cves": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "A list of potentially related CVEs"
        }
      },
      "required": ["bugType"],
      "additionalProperties": false
    }
  }
}
