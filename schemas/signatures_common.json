{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "AsnSignatureTestVector": {
      "type": "object",
      "properties": {
        "tcId": {
          "type": "integer",
          "description": "Identifier of the test case"
        },
        "comment": {
          "type": "string",
          "description": "A brief description of the test case"
        },
        "msg": {
          "type": "string",
          "format": "HexBytes",
          "description": "The message to sign"
        },
        "sig": {
          "type": "string",
          "format": "Asn",
          "description": "An ASN encoded signature for msg"
        },
        "result": {
          "type": "string",
          "description": "Test result",
          "enum": [
            "valid",
            "invalid",
            "acceptable"
          ]
        },
        "flags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "A list of flags"
        }
      },
      "additionalProperties": false,
      "required": [ "tcId", "comment", "msg", "sig", "result", "flags"]
    },
    "SignatureTestVector": {
      "type": "object",
      "properties": {
        "tcId": {
          "type": "integer",
          "description": "Identifier of the test case"
        },
        "comment": {
          "type": "string",
          "description": "A brief description of the test case"
        },
        "msg": {
          "type": "string",
          "format": "HexBytes",
          "description": "The message to sign"
        },
        "sig": {
          "type": "string",
          "format": "HexBytes",
          "description": "A signature for msg"
        },
        "result": {
          "type": "string",
          "description": "Test result",
          "enum": [
            "valid",
            "invalid",
            "acceptable"
          ]
        },
        "flags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "A list of flags"
        }
      },
      "additionalProperties": false,
      "required": [ "tcId", "comment", "msg", "sig", "result", "flags"]
    }
  }
}
