{
  "type": "object",
  "definitions": {
    "RsassaPssTestGroup": {
      "type": "object",
      "properties": {
        "type": {
          "enum": [
            "RsassaPssVerify"
          ]
        },
        "source": {
          "$ref": "common.json#/definitions/Source"
        },
        "publicKey": {
          "type": "object",
          "properties": {
            "modulus": {
              "type": "string",
              "format": "BigInt",
              "description": "The modulus of the key"
            },
            "publicExponent": {
              "type": "string",
              "format": "BigInt",
              "description": "The public exponent"
            }
          }
        },
        "publicKeyAsn": {
          "type": "string",
          "format": "Der",
          "description": "ASN encoding of the sequence [n, e]"
        },
        "publicKeyDer": {
          "type": "string",
          "format": "Der",
          "description": "ASN encoding of the public key"
        },
        "publicKeyPem": {
          "type": "string",
          "format": "Pem",
          "description": "Pem encoded public key"
        },
        "publicKeyJwk": {
          "$ref": "json_web_crypto_common.json#/definitions/JsonWebKey"
        },
        "keySize": {
          "type": "integer",
          "description": "the size of the modulus in bits"
        },
        "mgf": {
          "type": "string",
          "description": "the message generating function (e.g. MGF1)"
        },
        "mgfSha": {
          "type": "string",
          "description": "The hash function used for the message generating function."
        },
        "sLen": {
          "type": "integer",
          "description": "The salt length"
        },
        "sha": {
          "type": "string",
          "description": "The hash function for hasing the message."
        },
        "tests": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/RsassaPssTestVector"
          }
        }
      },
      "required": ["source"],
      "additionalProperties": false
    },
    "RsassaPssTestVector": {
      "type": "object",
      "properties": {
        "tcId": {
          "type": "integer",
          "description": "Identifier of the test case"
        },
        "comment": {
          "type": "string",
          "description": "A brief description of the test case"
        },
        "msg": {
          "type": "string",
          "format": "HexBytes",
          "description": "The message to sign"
        },
        "sig": {
          "type": "string",
          "format": "HexBytes",
          "description": "a signature for msg"
        },
        "result": {
          "type": "string",
          "description": "Test result",
          "enum": [
            "valid",
            "invalid",
            "acceptable"
          ]
        },
        "flags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "A list of flags"
        }
      },
      "additionalProperties": false
    }
  },
  "properties": {
    "algorithm": {
      "type": "string",
      "description": "the primitive tested in the test file"
    },
    "generatorVersion": {
      "type": "string",
      "description": "DEPRECATED: prefer \"source\" property in test group",
      "deprecated": true
    },
    "header": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "description": "additional documentation"
    },
    "notes": {
      "$ref": "common.json#/definitions/Notes"
    },
    "numberOfTests": {
      "type": "integer",
      "description": "the number of test vectors in this test"
    },
    "schema": {
      "enum": [
        "rsassa_pss_verify_schema_v1.json"
      ]
    },
    "testGroups": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/RsassaPssTestGroup"
      }
    }
  },
  "additionalProperties": false
}
