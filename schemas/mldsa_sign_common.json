{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "definitions": {
    "MlDsaSignTestVector": {
      "type": "object",
      "properties": {
        "tcId": {
          "type": "integer",
          "description": "Identifier of the test case"
        },
        "comment": {
          "type": "string",
          "description": "A brief description of the test case"
        },
        "msg": {
          "type": "string",
          "format": "HexBytes",
          "description": "The message to sign"
        },
        "ctx": {
          "type": "string",
          "format": "HexBytes",
          "description": "[optional] The additional context string (empty if not provided)"
        },
        "sig": {
          "type": "string",
          "format": "HexBytes",
          "description": "The encoded signature (empty in case of expected failure)"
        },
        "result": {
          "type": "string",
          "description": "Test result",
          "enum": [
            "valid",
            "invalid"
          ]
        },
        "flags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "A list of flags"
        }
      },
      "additionalProperties": false,
      "required": [
        "tcId",
        "comment",
        "msg",
        "sig",
        "result",
        "flags"
      ]
    },
    "CompletePureMlDsaSignTestVector": {
      "type": "object",
      "properties": {
        "tcId": {
          "type": "integer",
          "description": "Identifier of the test case"
        },
        "comment": {
          "type": "string",
          "description": "A brief description of the test case"
        },
        "privateSeed": {
          "type": "string",
          "format": "HexBytes",
          "description": "The private key (seed format: 32-byte ξ (Xi) value)"
        },
        "publicKey": {
          "type": "string",
          "format": "HexBytes",
          "description": "The public key"
        },
        "privateKey": {
          "type": "string",
          "format": "HexBytes",
          "description": "The expanded private key"
        },
        "randomness": {
          "type": "string",
          "format": "HexBytes",
          "description": "The 32-byte randomness to use for the hedged signature"
        },
        "msg": {
          "type": "string",
          "format": "HexBytes",
          "description": "The message to sign"
        },
        "ctx": {
          "type": "string",
          "format": "HexBytes",
          "description": "[optional] The additional context string (empty if not provided)"
        },
        "mu": {
          "type": "string",
          "format": "HexBytes",
          "description": "The µ (Mu) value that was signed"
        },
        "sig": {
          "type": "string",
          "format": "HexBytes",
          "description": "The encoded signature (empty in case of expected failure)"
        },
        "result": {
          "type": "string",
          "description": "Test result",
          "enum": [
            "valid",
            "invalid"
          ]
        },
        "flags": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "A list of flags"
        }
      },
      "additionalProperties": false,
      "required": [
        "tcId",
        "comment",
        "privateSeed",
        "privateKey",
        "publicKey",
        "randomness",
        "msg",
        "ctx",
        "mu",
        "sig",
        "result",
        "flags"
      ]
    }
  }
}